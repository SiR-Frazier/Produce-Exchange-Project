<h2>Event Details: <%= @event.title %> </h2>

<h4><u>Description</u>: <%= @event.description %></h4>
<h4><u>Date</u>: <%= @event.date %></h4>
<h4><u>Neighborhood</u>: <%= @event.quadrant %></h4>

<br>
<h4><u>Current Attendees:</u></h4>
  <% if @event.users.any? %>
    <ul>
      <% @event.users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This event has no attendees yet. Add your name below!</p>
  <% end %>


<br>
<h4>RSVP to this event:</h4>

<form action="/events/<%= @event.id %>" method="post" class="form-container">
  <input id="user_id" name="user_id" type="hidden" value="<%= @session_id %>">
  <p><button type="submit">RSVP!</button></p>
</form>

<br>
<p><a href="/events/<%= @event.id() %>/edit">Edit Event</a></p>
